<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idRLOnBoard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="10dp"
    tools:context=".MainActivity">


    <TextView
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/idTVSignUpOnBoard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif-light"
        android:text="Sign up"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_alignParentRight="true" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/idViewPagerOnBoard"
            android:layout_below="@id/idTVSignUpOnBoard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/idTabDotsOnBoard"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp" />


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/idTabDotsOnBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            app:tabBackground="@drawable/onboard_tab_selector"
            app:tabIndicatorHeight="0dp" />


        <TextView
            android:id="@+id/idTVNextOnBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idViewPagerOnBoard"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:drawablePadding="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="Next"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="22sp"
            android:visibility="visible"
            app:drawableEndCompat="@drawable/ic_arrow_right" />


        <TextView
            android:id="@+id/idTVGetStartedOnBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idViewPagerOnBoard"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:background="@drawable/onboard_button_bg_dark"
            android:gravity="center_vertical"
            android:paddingStart="25dp"
            android:paddingTop="5dp"
            android:paddingEnd="25dp"
            android:paddingBottom="5dp"
            android:text="Get Started"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:visibility="gone" />

</RelativeLayout>